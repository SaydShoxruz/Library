<Window x:Class="Library.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="Registration" Height="450" Width="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>

        <Button
            Grid.Row="1"
            Background="Orange"
            Height="40"
            Width="130"
            BorderBrush="White"
            BorderThickness="3"
            FontSize="18"
            Foreground="White"
            Content=" Password "
            Cursor="Hand" 
            FontStyle="Italic"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Margin="0 0 0 130"
            Click="PasswordButton"/>

        <Button
            Grid.Row="0"
            Background="Orange"
            Height="40"
            Width="130"
            BorderBrush="White"
            BorderThickness="3"
            FontSize="18"
            Foreground="White"
            Content=" UserName "
            Cursor="Hand"
            FontStyle="Italic"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Margin="0 130 0 0"
            Click="UserNameButton"/>

        <TextBlock
            Text="Mashennik's Library"
            Grid.Row="0"
            Background="DarkOrange"
            Height="30"
            Width="160"
            FontSize="18"
            Foreground="White"
            Cursor="Hand"
            FontStyle="Italic"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Margin="0 70 550 120"
            
            />

    </Grid>
</Window>
