<Window x:Class="Library.Views.SignInDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.Views"
        mc:Ignorable="d"
        Title="SignInDialog" Height="450" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel
        Grid.Row="0"
        Margin="0"
        Background="#993333">

            <TextBlock
            Height="48"
            TextAlignment="Center"
            Margin="0 0 240 0"
            Padding="1"
            Width="120"
            Background="AntiqueWhite">
                <Run FontFamily="Segoe Print" FontSize="13.666666666666666" Text="Mashennik's"/>
                <LineBreak/>
                <Run FontFamily="Segoe Print" FontSize="13.666666666666666" Text="Library"/>

            </TextBlock>

            <TextBlock
            Height="25"
            TextAlignment="Center"
            Margin="140 -45 0 0"
            Background="AntiqueWhite"
            Width="80">
            <Run FontSize="15" Text="Sign In"/>

            </TextBlock>
        </StackPanel>

        <StackPanel
        Grid.Row="1"
        Margin="0"
        Background="#993333">

            <TextBlock 
            Height="46"
            TextAlignment="Center"
            Margin="0 0 250 0"
            Padding="12"
            Width="100">
            <Run FontSize="16" Text="Username:"/>
            </TextBlock>

        </StackPanel>
        
        <StackPanel
        Grid.Row="2"
        Margin="0"
        Background="#993333">

            <TextBlock 
            Height="46"
            TextAlignment="Center"
            Margin="0 0 250 0"
            Padding="12"
            FontSize="20"
            Width="100">
            <Run FontSize="16" Text="Password:"/>
            </TextBlock>

        </StackPanel>

        <StackPanel
        Grid.Row="3"
        Margin="0"
        Background="#993333">

            <TextBlock 
            Height="50"
            TextAlignment="Center"
            Margin="0 0 250 0"
            Padding="12"
            FontSize="20"
            Width="100">
            <Run FontSize="16" Text="FullName:"/>
            </TextBlock>

        </StackPanel>

        <StackPanel
        Grid.Row="4"
        Margin="0"
        Background="#993333">

            <TextBlock 
                Height="46"
                TextAlignment="Center"
                Margin="0 0 250 0"
                Padding="12"
                FontSize="20"
                Width="130">
                <Run FontSize="16" Text="Phone Number:"/>
            </TextBlock>

        </StackPanel>

        <StackPanel
        Grid.Row="5"
        Margin="0"
        Background="#993333">

            <TextBlock 
            Height="50"
            TextAlignment="Center"
            Margin="0 0 250 0"
            Padding="12"
            FontSize="20"
            Width="100" RenderTransformOrigin="0.528,0.155">
            <Run FontSize="16" Text="Address:"/>
            </TextBlock>

        </StackPanel>

        <StackPanel
        Grid.Row="6"
        Margin="0"
        Background="#993333">

            <TextBlock 
                Height="47"
                TextAlignment="Center"
                Margin="0 0 250 0"
                Padding="12"
                FontSize="20"
                Width="100">
                <Run FontSize="16" Text="Birthday:"/>
            </TextBlock>
            

        </StackPanel>

        <StackPanel
      Grid.Row="3" 
      Margin="0">

            <TextBox 
          x:Name="fullNameTextBox"
          Height="34"
          Background="AntiqueWhite"
          FontSize="16"
          TextAlignment="Center"
          Padding="6"
          Width="240"
          Margin="130 7 0 30">
            </TextBox>
        </StackPanel>

        <StackPanel
        Grid.Row="4" 
        Margin="0">

            <TextBox 
            x:Name="phoneNumberTextBox"
            Height="34"
            Background="AntiqueWhite"
            FontSize="16"
            TextAlignment="Center"
            Padding="6"
            Width="240"
            Margin="130 7 0 30">
            </TextBox>
            

            
        </StackPanel>

        <StackPanel
      Grid.Row="5" 
      Margin="0">

            <TextBox 
          x:Name="addressTextBox"
          Height="34"
          Background="AntiqueWhite"
          FontSize="16"
          TextAlignment="Center"
          Padding="6"
          Width="240"
          Margin="130 7 0 30">
            </TextBox>
        </StackPanel>

        <StackPanel
      Grid.Row="6" 
      Margin="0">

            <DatePicker 
                x:Name="birthDatePicker"
                Width="240"
                Margin="138 7 8 0" 
                Height="32"
                Background="AntiqueWhite" 
                FontSize="10" 
                Padding="8" >
            </DatePicker>

        </StackPanel>

        <StackPanel
      Grid.Row="1" 
      Margin="0">

            <TextBox 
          x:Name="userNameTextBox"
          Height="34"
          Background="AntiqueWhite"
          FontSize="16"
          TextAlignment="Center"
          Padding="6"
          Width="240"
          Margin="130 7 0 30">

            </TextBox>
        </StackPanel>
        
        <StackPanel
      Grid.Row="2" 
      Margin="0">

            <PasswordBox 
          x:Name="passwordTextBox"
          Height="34"
          Background="AntiqueWhite"
          FontSize="16"
          Padding="6"
          Width="240"
          Margin="130 7 0 30"
          TextSearch.Text="Password">
            </PasswordBox>
        </StackPanel>



        <StackPanel
        Grid.Row="7"
        Margin="0"
        Background="#993333">

            <TextBlock 
            Height="50"
            TextAlignment="Center"
            Margin="0 0 250 0"
            Padding="12"
            FontSize="20"
            Width="100" RenderTransformOrigin="0.502,0.524">
            <Run FontSize="16" Text="Gender:"/>
            </TextBlock>

        </StackPanel>

        <StackPanel
            Grid.Row="7"
            Margin="0">

            <ComboBox 
                x:Name="genderComboBox"
                Margin="138 7 8 0" 
                Height="32" 
                Width="240"
                Background="AntiqueWhite" 
                FontSize="15"  
                Padding="6" />



        </StackPanel>

        <StackPanel
            Grid.Row="8"
            Background="#993333"
            >
        <Button 
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Height="35"
            Content="Save"
            FontSize="18"
            Width="120"
            Margin="0 7 0 0"
            Background="AntiqueWhite" Click="SaveButton_Clicked"
            />
        </StackPanel>

    </Grid>
</Window>
